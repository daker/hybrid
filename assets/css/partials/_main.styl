.content
    width 940px
    margin auto
    overflow hidden

#site-head
    display table
    width 100%
    height 350px
    color #FFF
    -webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    background-size cover
    background-repeat no-repeat
    background-position 50% 50%
    text-align center
    position relative

#menu
    text-transform uppercase
    word-spacing 4px
    text-align left
    width 940px
    margin 0 auto
    margin-top 10px
    a
        text-decoration none
        color #fff
        padding-left 5px
        font-size 15px
        text-transform uppercase
        margin 0
        padding 18px 12px 10px 12px
        .fa
            color #fff
            vertical-align sub
            text-align left
            font-size 22px
            width 1.3em
            &:hover
                color #d44a34

#sidebar
    width 200px
    float left
    text-align right
    margin 20px 40px 0 0

.blog-logo
    display block
    vertical-align middle
    height 100px
    width 100px
    margin 0 auto
    img
        display block
        max-height 150px
        width auto
        margin 0 auto
        line-height 0
        position relative

.blog-title
    margin 10px 0 10px 0
    letter-spacing 2px
    font-weight 400
    text-transform uppercase
    color #fff
    text-shadow 0 1px 3px rgba(0, 0, 0, 0.3)

.blog-description
    font-weight 300
    color #fff
    text-transform uppercase
    text-shadow 0 1px 3px rgba(0, 0, 0, 0.3)

