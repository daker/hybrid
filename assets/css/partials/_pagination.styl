.pagination
    position relative

.page-number
    width 100%
    position absolute
    top 0
    line-height 2.2
    text-align center
    font-size 1em
    display block
    color #ADA79F
    font-style italic

.newer-posts,
.older-posts
    width 25%
    float left
    position relative
    z-index 10
    line-height 1.2
    border-radius 3px
    padding 10px 20px 10px 10px

.newer-posts:hover,
.older-posts:hover
    background #e9573f
    color #fff
    text-decoration none

.older-posts
    text-align right
    float right
