.content
  & > #sidebar
    & + .posts
      float left
      width 700px
      margin 0

.posts
  position relative
  width 80%
  max-width 700px
  margin 4rem auto
  word-break break-word
  hyphens auto


.post
    margin-bottom 20px

.post-header, .post-content
    margin 30px auto 0 auto
    position relative

.post-content
    margin-top 15px
    iframe
        margin 0 auto
        margin-bottom 10px


.post-meta-item
    font-size 1em
    color #ADA79F
    .post-meta-pubdate,
    .post-meta-comments
        font-size 1em
        color #ADA79F

.post-title
    line-height 1
    margin-bottom 5px
    a
        font-weight 700
        text-decoration none

.post-body h1,
.post-body h2,
.post-body h3
    margin-bottom 10px

.post-body > ul,
.post-body > ol
    margin-bottom 30px

.post-body
    & > ol
        list-style-type decimal


p > code,
.post-body code
    font-size 18px
    color #A29A9A

.post-body
    & > .code
        margin-bottom 10px
