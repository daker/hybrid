{{!< default}}

<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <nav id="menu">
        <a href="{{@blog.url}}">
            <i class="fa fa-home fa-fw"></i>
        </a>
    </nav>

    <section class="">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"></a>{{/if}}
        <h1 class="blog-title">{{@blog.title}}</h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
    </section>
</header>

<main class="content">
    <section class="posts">
        {{#foreach posts}}
            {{> post/list this}}
        {{/foreach}}

        {{pagination}}
    </section>
</main>